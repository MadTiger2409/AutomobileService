@{
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}
<link rel="stylesheet" href="~/css/Home/registration.css" type="text/css" />
<div class="wrapper wrapper--small">
    <h1 class="headline headline--small">Rejestracja</h1>
    <div class="container--white container--small">
        <div class="register-form">
            <input type="login" class="input input--white container__input" placeholder="Login" minlength="6" maxlength="25" required>
            <input type="email" class="input input--white container__input" placeholder="E-mail" minlength="7" maxlength="50" required>
            <input type="phone" class="input input--white container__input" placeholder="Numer telefonu" minlength="9" maxlength="9" required>
            <input type="password" class="input input--white container__input" placeholder="Hasło" minlength="8" maxlength="50" required>
            <input type="password" class="input input--white container__input" placeholder="Powtórz hasło" minlength="8" maxlength="50" required>
            <div class="check">
                <label class="check__label">
                    <input type="checkbox" class="check__checkbox"> Oświadczam, iż zapoznałem(-am) się z <a class="links" href="@Url.Action("regulations","Home")">regulaminem</a> portalu Automobile Service i akceptuję jego treść.
                </label>
            </div>
            <div class="check">
                <label class="check__label"><input type="checkbox" class="check__checkbox"> Wyrażam zgodę na przetwarzanie moich danych osobowych przez Automobile Service Team w celu korzystania z serwisu Automobile Service.</label>
            </div>
            <div class="container__button-block">
                <button class="container__button button button--white">Zarejestruj</button>
            </div>
        </div>
    </div>
</div>